@model List<Db.Entity.Goods>

@{
    ViewBag.Title = "3D объекты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Товары</h2>
@Html.ActionLink("Добавить", "AddGoods")
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Код</th>
            <th>Товар</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.ActionLink(item.Id.ToString(), "Goods", new { id = item.Id }) </td>
        <td>@item.Name</td>
    </tr>
    }
    </tbody>
</table>
<script language="javascript">
    $(document).ready(function(){
        $('#table_id').DataTable({
            "language": {
                "url": "@Url.Content("~/Content/DataTables-1.10.2/dataTables.russian.langs")"
            }
        });
    });
</script>

